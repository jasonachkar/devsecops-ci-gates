{
  "name": "devsecops-ci-gates",
  "version": "1.0.0",
  "description": "DevSecOps CI/CD Security Gates",
  "private": true,
  "workspaces": [
    "dashboard",
    "backend",
    "apps/node-api"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspace=dashboard && npm install --workspace=backend && npm install --workspace=apps/node-api"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}

