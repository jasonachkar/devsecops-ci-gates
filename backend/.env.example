# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL="postgresql://devsecops:devsecops_password@localhost:5432/devsecops?schema=public"

# Authentication
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# API Keys (for CI/CD integration)
API_KEY_CI_CD=test-api-key-for-cicd

# AWS Configuration (Optional - only needed if using AWS features)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SECURITY_HUB_ENABLED=false

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
